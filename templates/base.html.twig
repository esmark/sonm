<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    {% block css %}
        <link rel="stylesheet" href="{{ asset('assets/bootstrap/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/fontawesome/css/all.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/pnotify/pnotify.custom.min.css') }}">

        <link rel="stylesheet" href="https://unpkg.com/leaflet@1.5.1/dist/leaflet.css"
              integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ=="
              crossorigin=""/>

        <style type="text/css">
            html {
                font-size: 15px !important;
            }
            .navbar-dark .nav-item .nav-link {
                color: darkgray;
            }
            .navbar-dark .nav-item .nav-link:hover {
                color: whitesmoke;
            }
            .dropdown-item:hover {
                color: black;
                background-color: lightgray;
            }
            @media (min-width: 576px) {
                .form-group label,
                .form-group legend {
                    text-align: left;
                }
            }
            @media (min-width: 768px) {
                .form-group label,
                .form-group legend{
                    text-align: right;
                }
            }
            .clear {
                clear: both;
            }
            .form-group label.col-form-label,
            .form-group legend.col-form-label{
                font-weight: bold;
            }
            .form-group label.col-form-label .invalid-feedback {
                display: none !important;
            }
            .form-group label.required:after {
                content: ' *';
                color: red;
            }
            .form-control option[selected=selected] {
                color: blue;
                font-weight: bold;
            }
            .custom-file-input{
                padding: 4px;
                opacity: 1;
                background-color: white;
            }
            .custom-file-label {
                display: none;
            }
            .nav .nav-item .nav-link:hover {
                /*background-color: #e8e9ea;*/
            }
            .myform {
                background-color: #e8e9ea;
                padding: 15px 15px 1px 10px;
            }
            .card-text {
                margin-bottom: 7px;
            }
            .visible {
                display: block;
                opacity: 1;
            }
            #mapdiv {
                height: 500px;
                width: 100%;
            }
        </style>
    {% endblock %}

    {# Чтобы стили применялись до загрузки страницы в Firefox #}
    <script src="{{ asset('assets/jquery-3.4.1.min.js') }}"></script>

    <script src="https://unpkg.com/leaflet@1.5.1/dist/leaflet.js"
            integrity="sha512-GffPMF3RvMeYyc1LWMHtK8EbPv0iNZ8/oTtHPx9/cc2ILxQ+u905qIwdpULaqDkyBKgOaB57QTMg7ztg8Jm2Og=="
            crossorigin=""></script>

</head>
<body class="bg-light">

{% block header %}
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark __fixed-top bg-dark">
            <div class="container">
{#                <a class="navbar-brand py-0" href="/">Главная</a>#}
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="mr-auto">
                        {{ knp_menu_render('top', {'currentClass': 'active'}) }}
                    </div>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            {% if app.user %}
                                <a class="nav-link dropdown-toggle py-0" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    {{ app.user }}
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="{{ path('profile') }}">Мой профиль</a>

                                    {% if app.user.hasRole('ROLE_ADMIN') %}
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="{{ path('admin') }}">Admin</a>
                                    {% endif %}

                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="{{ path('security_logout') }}">Выход</a>
                                </div>
                            {% else %}
                                <a href="{{ path('security_login') }}">Вход</a>
                                |
                                <a href="{{ path('security_login') }}">Регистрация</a>
                            {% endif %}
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
{% endblock header %}
<content role="main">
    <div class="container">
        {% block content '' %}
    </div>
</content>

{% block footer %}
    <footer class="my-5 _pt-5 text-muted text-center text-small">
        <p class="mb-1">&copy; {{ 'now'|date('Y ')}} СОНМ - Союз Кооператоров</p>
    </footer>
{% endblock footer %}

{% block js %}
    <script src="{{ asset('assets/popper.min.js') }}"></script>
    <script src="{{ asset('assets/bootstrap/bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/pnotify/pnotify.custom.min.js') }}"></script>

    {% include '@SmartCore/pnotify_flash_messages.html.twig' %}

    <script>
        $('li.active a').addClass('active');
        $('li.current a').addClass('active');
        $('ul.nav li').addClass('nav-item');
        $('ul.nav li a').addClass('nav-link');
        $('.container form').addClass('myform');
        $('.container-fluid form').addClass('myform');
        $('.nav .nav-item .nav-link').hover(
          function () {
            if (!$(this).hasClass('active')){
              $(this).css('background-color', '#e8e9ea');
            }
          },
          function () {
            if (!$(this).hasClass('active')) {
              $(this).css('background-color', 'transparent');
            }
          }
        );
    </script>
{% endblock %}
</body>
</html>
