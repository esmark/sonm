{% extends 'base.html.twig' %}

{% block title %}Вход в СОНМ - Союз Кооператоров{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm"></div>
        <div class="col-sm">
            <form class="form-signin" method="post">
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey }}
                    </div>
                {% endif %}

                <div class="form-label-group">
                    <input type="text" id="inputUsername" class="form-control" placeholder="{{ 'Username'|trans }}" name="_username" required autofocus>
                </div>

                <div class="form-label-group">
                    <input type="password" id="inputPassword" class="form-control" placeholder="{{ 'Password'|trans }}" name="_password" required>
                </div>
                <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}"/>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

                <button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'Sign in'|trans }}</button>
            </form>
        </div>
        <div class="col-sm"></div>
    </div>
{% endblock %}
