{% extends 'account/_layout.html.twig' %}

{% block account_content %}
    <h2>Анкета намерений</h2>

    {{ form_start(form) }}

    <ul class="nav nav-pills" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="take-tab" data-toggle="tab" href="#take" role="tab" aria-controls="take" aria-selected="true">
                Что я хочу получить от работы в ПСК?
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="give-tab" data-toggle="tab" href="#give" role="tab" aria-controls="give" aria-selected="false">
                Что я могу дать ПСК?
            </a>
        </li>
    </ul>

    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="take" role="tabpanel" aria-labelledby="take-tab">
            {{ form_widget(form.purposeTake) }}
        </div>
        <div class="tab-pane fade" id="give" role="tabpanel" aria-labelledby="give-tab">
            {{ form_widget(form.purposeGive) }}
        </div>
    </div>

    <div style="padding: 10px;">
        {{ form_widget(form.save) }}
    </div>

    {{ form_end(form) }}
{% endblock account_content %}
