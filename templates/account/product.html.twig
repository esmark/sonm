{% extends 'account/_layout.html.twig' %}

{% block content %}

    {{ parent() }}

    <p style="float: right; margin-top: 8px;">
        <a href="{{ path('account_product_new') }}" class="btn btn-success">Добавить</a>
    </p>

    <h2>Мои товары</h2>

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Название</th>
            <th>Краткое описание</th>
            <th>Цены</th>
            <th>Кооператив</th>
            <th>Дата добавления</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td><a href="{{ path('account_product_edit', {'id': product.id}) }}">{{ product.title }}</a></td>
                <td>{{ product.shortDescription }}</td>
                <td>{{ product.priceRange }}</td>
                <td><a href="{{ path('account_coop_show', {'id': product.cooperative.id}) }}">{{ product.cooperative }}</a></td>
                <td>{{ product.createdAt|date }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
