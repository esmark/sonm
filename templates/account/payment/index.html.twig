{% extends 'account/_layout.html.twig' %}

{% block title %}Мои платежи{% endblock %}

{% block content %}
    {{ parent() }}

    <h1>Мои платежи</h1>

    <p>Всего: {{ payments|length }}</p>

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Дата</th>
            <th>Заказ</th>
            <th>Сумма</th>
            <th>Метод</th>
            <th>Статус</th>
        </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.createdAt|date }}</td>
                <td><a href="{{ path('account_order_edit', {'id': payment.order.id}) }}">{{ payment.order.id }}</a></td>
                <td>{{ payment.amount }}</td>
                <td>{{ payment.method }}</td>
                <td><span class="badge badge-{{ payment.statusBadgeColor }}">{{ payment.statusAsText }}</span></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
